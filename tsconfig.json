{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@repos/*": ["repos/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@dto/*": ["dto/*"]
    },
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "sourceMap": true

    /* REMOVE these if present:
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
    */
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
